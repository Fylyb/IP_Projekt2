{{#employee}}
    <h1>Detail osoby {{surname}} {{name}}</h1>
    <dl>
        <dt>Jméno</dt>
        <dd>{{name}}</dd>

        <dt>Příjmení</dt>
        <dd>{{surname}}</dd>

        <dt>Pozice</dt>
        <dd>{{job}}</dd>

        <dt>Mzda</dt>
        <dd>{{wage}}</dd>

        <dt>Místnosti</dt>
        {{#rooms}}
            <dd>
                <a href='../room/detail.php?roomId={{room}}'> {{roomName}}</a>
            </dd>
        {{/rooms}}

        <dt>Klíče</dt>
        {{#keys}}
            <dd>
                <a href='../room/detail.php?roomId={{room}}'> {{roomName}} </a>
            </dd>
        {{/keys}}
    </dl>
{{/employee}}
